<form class="cyberhack item-sheet talent-sheet" autocomplete="off">
	<section class="sheet-body">
		<div class=" item-edit">
			<div class="form-group">
				{{ formGroup itemFields.description value=system.description localize=true}}
			</div>
			<div class="flexrow">
				<div class="form-grid">
					{{ formGroup itemFields.xpPrice value=system.xpPrice localize=true}}
				</div>
				<div class="form-grid">
					{{ formGroup itemFields.level value=system.level localize=true}}
				</div>
			</div>
		</div>
		<div class="item-read">
			<div class="form-group">
				<label>{{localize "cyberhack.Item.FIELDS.description.label" }}</label>
				{{ system.description }}
			</div>
			<div class="flexrow">
				<div class="form-grid">
					{{ system.xpPrice }}
				</div>
				<div class="form-grid">
					{{ system.level }}
				</div>
			</div>
		</div>
	</section>
</form>